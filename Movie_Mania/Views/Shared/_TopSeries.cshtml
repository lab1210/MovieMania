
<div class="container">
    <div class="row top_1">
        <div class="col-md-3">
            <div class="top_1l pt-1">
                <h3 class="mb-0"><a class="text-white" style="text-decoration:none" href="@Url.Action("TvSeries", "Home")"><i class="fa fa-video-camera col_red me-1"></i> Movie Mania</a></h3>
            </div>
        </div>
        <div class="col-md-5">
            @using (Html.BeginForm("TVSeries", "Home", FormMethod.Get))
            {
                <div class="top_1m">
                    <div class="input-group">

                        <input type="text" name="searchname" id="searchname" class="form-control bg-black" placeholder="Search Site...">
                        <span class="input-group-btn">
                            <button class="btn btn text-white rounded-0 border-0" style="background-color:#DE1002" type="submit">
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4">
            <div class="text-end">
                <ul class="social-network mb-0">
                    @if (ViewBag.LoggedInUserName != null)
                    {

                        <li>

                            <div style="display:flex;">

                                <h5 style="color:white">Welcome <span class="text-secondary"> @ViewBag.LoggedInUserName</span> !</h5>
                            </div>

                        </li>
                        if (ViewBag.UserRole == "Admin")
                        {
                            <li style="margin-left:60px">

                                <ul class="navbar-nav">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" style="color:#DE1002" href="#" id="dropdownMenu2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Actions
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenu2">
                                            @using (Html.BeginForm("Logout", "Authentication", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                <li><button class="dropdown-item">Logout</button></li>
                                            }
                                            <li><a class="dropdown-item" href="@Url.Action("Create_Admin", "Movie", FormMethod.Post)">Add Admin</a></li>
                                            <li><a class="dropdown-item" href="@Url.Action("Admin_List", "Movie", FormMethod.Post)">View Admin List</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>

                        }
                        else
                        {
                            <li style="margin-left:60px">
                                @using (Html.BeginForm("Logout", "Authentication", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <button type="submit" class="btn btn text-dark bg-white  ">
                                        Logout

                                    </button>


                                }
                            </li>
                        }
                    }
                    else
                    {
                        <li>
                            <a class="btn btn text-dark bg-white  " href="@Url.Action("Login", "Authentication")">
                                Login
                            </a>

                        </li>

                        <li>


                            <a class="btn btn text-white " style="background-color:#DE1002" href="@Url.Action("Register", "Authentication")">
                                SignUp
                            </a>


                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
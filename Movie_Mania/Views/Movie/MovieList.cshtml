

@model IEnumerable<Movie_Mania.Resources.MovieResources>
@{
    ViewBag.Title = "MovieList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="page-header">
    <div class="page-title">
        <h4>Movie List</h4>
        <h6>Manage your Movies</h6>
    </div>
    <div class="page-btn">
        <a href="@Url.Action("AddMovie","Movie")" class="btn btn-added"><img src="~/Content/icons/plus.svg" class="me-2" alt="img">Add Movie</a>
    </div>
</div>
<br />

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table datanew">
                <thead>
                    <tr>
                        <th>
                            <label class="checkboxs">
                                <input type="checkbox" id="select-all">
                                <span class="checkmarks"></span>
                            </label>
                        </th>
                        <th></th>
                        <th>Trailer</th>
                        <th>Movie Name</th>

                        <th>Description</th>
                        <th>Release Date</th>
                        <th>Ticket Price</th>
                        <th>Country</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <label class="checkboxs">
                                    <input type="checkbox">
                                    <span class="checkmarks"></span>
                                </label>
                            </td>
                            <td class="productimgname">
                                <a class="product-img">
                                    <img src=@item.ImagePath alt="Image" style="max-width:100px;max-height:100px" />
                                </a>
                                <a href="javascript:void(0);"></a>
                            </td>
                            <td>
                                <a href="@item.VideoPath">@item.VideoPath</a>
                            </td>
                            <td> @Html.DisplayFor(modelitem => item.Name)</td>
                            <td> @Html.DisplayFor(modelitem => item.Description)</td>
                            <td> @Html.DisplayFor(modelitem => item.ReleaseDate)</td>
                            <td> @Html.DisplayFor(modelitem => item.TicketPrice)</td>
                            <td> @Html.DisplayFor(modelitem => item.Country)</td>
                            <td>
                                <a class="me-3" href="@Url.Action("EditMovie", "Movie", new {ID=item.Id})">
                                    <img src="~/Content/icons/edit.svg" alt="img">
                                </a>
                            </td>
                            <td>
                                <a class="me-3" href="@Url.Action("DeleteMovie", "Movie", new {ID=item.Id})" onclick="return confirm('Are you sure you want to delete this Movie?');">
                                    <img src="~/Content/icons/delete.svg" alt="img">
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
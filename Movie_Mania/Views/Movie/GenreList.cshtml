@model IEnumerable<Movie_Mania.Models.Genre>
@{
    ViewBag.Title = "GenreList";
    Layout = "../Shared/_LayoutAdmin.cshtml";

}


<div class="page-header">
    <div class="page-title">
        <h4>Genre List</h4>
        <h6>Manage your Genres</h6>
    </div>
    <div class="page-btn">
        <a href="@Url.Action("AddGenre","Movie")" class="btn btn-added" style="color:white"><img src="~/Content/icons/plus.svg" class="me-2" alt="img">Add Genre</a>
    </div>
</div>
<br />

<div class="card">
    <div class="card-body">


        <div class="table-responsive">
            <table class="table datanew">

                <thead>
                    <tr>
                        <th>
                            <label class="checkboxs">
                                <input type="checkbox" id="select-all">
                                <span class="checkmarks"></span>
                            </label>
                        </th>
                        <th>Genre Name</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <label class="checkboxs">
                                    <input type="checkbox">
                                    <span class="checkmarks"></span>
                                </label>
                            </td>

                            <td> @Html.DisplayFor(modelitem => item.Name)</td>

                            <td>
                                <a class="me-3" href="@Url.Action("DeleteGenre", "Movie", new {ID=item.Id})" onclick="return confirm('Are you sure you want to delete this Genre?');">
                                    <img src="~/Content/icons/delete.svg" alt="img">
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
